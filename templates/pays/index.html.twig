{% extends 'base.html.twig' %}

{% block title %}Pays index{% endblock %}

{% block monTitre %}
    <div>
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Pays</h1>
        </div>
    </div>
{% endblock %}

{% block body %}
    <h1>Pays index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pays</th>
                <th>Code Pays</th>
                <th>Indicatif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays %}
            <tr>
                <td>{{ pay.id }}</td>
                <td>{{ pay.nomPays }}</td>
                <td>{{ pay.codePays }}</td>
                <td>{{ pay.codeTelPays }}</td>
                <td>
                    <a href="{{ path('pays_show', {'id': pay.id}) }}">show</a>
                    <a href="{{ path('pays_edit', {'id': pay.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pays_new') }}">Create new</a>
{% endblock %}
