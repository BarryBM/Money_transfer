{% extends 'base.html.twig' %}

{% block title %}Currency index{% endblock %}

{% block monTitre %}
    <div>
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Currency</h1>
        </div>
    </div>
{% endblock %}

{% block body %}
    <h1>Currency index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Devise</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for currency in currencies %}
            <tr>
                <td>{{ currency.id }}</td>
                <td>{{ currency.nomCurrency }}</td>
                <td>{{ currency.codeCurrency }}</td>
                <td>
                    <a href="{{ path('currency_show', {'id': currency.id}) }}">show</a>
                    <a href="{{ path('currency_edit', {'id': currency.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('currency_new') }}">Create new</a>
{% endblock %}
